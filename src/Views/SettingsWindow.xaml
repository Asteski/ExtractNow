<Window x:Class="ExtractNow.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings" Width="600" MinWidth="600" WindowStartupLocation="CenterOwner" SizeToContent="Height" ResizeMode="NoResize"
    Icon="/assets/settings.ico">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        

        <GroupBox Grid.Row="1" Header="General settings" Padding="8" Margin="0,0,0,8">
            <StackPanel>
                <CheckBox x:Name="AlwaysOnTopCheck"
                          Content="Always on top"
                          Margin="0,0,0,6"/>
                <CheckBox x:Name="ShowOnAssocCheck"
                          Content="Show progress window when launched by double-click"
                          Margin="0,0,0,0"/>
                <CheckBox x:Name="ShowTrayIconCheck"
                          Content="Show tray icon while extracting (with progress)"
                          Margin="0,6,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Show window if archive â‰¥" VerticalAlignment="Center"/>
                    <TextBox x:Name="ThresholdMbBox" Width="80" Margin="8,0,8,0"/>
                    <TextBlock Text="MB" VerticalAlignment="Center"/>
                </StackPanel>

                <Separator Margin="0,10,0,10"/>
                <CheckBox x:Name="OpenFolderOnCompleteCheck"
                          Content="Open the extracted folder automatically"
                          Margin="0,0,0,0"/>
                <CheckBox x:Name="ReuseExplorerWindowsCheck"
                          Content="Open extracted folder in the same Explorer window"
                          ToolTip="When enabled, folders open in the current Explorer window instead of a new one"
                          Margin="0,6,0,0"/>
                <CheckBox x:Name="CloseAppAfterExtractionCheck"
                          Content="Close ExtractNow after extraction"
                          Margin="0,6,0,0"/>
                <CheckBox x:Name="ShowNotificationOnCompleteCheck"
                          Content="Show Windows notification when extraction completes"
                          Margin="0,6,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Archive Size Threshold -->
        <GroupBox Grid.Row="2" Header="Archive size threshold" Padding="8" Margin="0,0,0,8">
            <StackPanel>
                <CheckBox x:Name="EnableSizeThresholdCheck"
                          Content="Enable size threshold (skip extraction for large archives)"
                          Margin="0,0,0,6"/>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Maximum archive size:" VerticalAlignment="Center"/>
                    <TextBox x:Name="MaxArchiveSizeMBBox" Width="80" Margin="8,0,8,0"/>
                    <TextBlock Text="MB" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="When threshold exceeded, open with:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="OversizedActionCombo" Width="150">
                        <ComboBoxItem Content="File Explorer" Tag="Explorer"/>
                        <ComboBoxItem Content="7-Zip" Tag="7-Zip"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 7-Zip location selector -->
        <GroupBox Grid.Row="3" Header="7-Zip location" Padding="8" Margin="0,0,0,8">
            <StackPanel>
                <TextBox x:Name="SevenZipPathBox" HorizontalAlignment="Stretch"
                         ToolTip="Custom 7-Zip folder (leave empty to use bundled 7-Zip binaries)."/>
                <Grid Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Leave empty to use bundled 7-Zip binaries" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                    <Button Grid.Column="1" Content="Select..." Width="100" Margin="8,0,8,0" Click="SelectSevenZip_Click"/>
                    <Button Grid.Column="2" Content="Restore default" Width="130" Click="RestoreSevenZip_Click"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="4" Header="Miscellaneous" Padding="8" Margin="0,0,0,8">
            <StackPanel>
                <CheckBox x:Name="RestoreDefaultWindowSizeCheck"
                          Content="Restore original window size on restart"
                          ToolTip="When enabled, the main window will open at default size (720x580) each time you start the app."
                          />
            </StackPanel>
        </GroupBox>

        <Grid Grid.Row="5" Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="100" Click="Save_Click" IsDefault="True"/>
                <Button Content="Close" Width="100" Click="Close_Click" Margin="8,0,0,0" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
