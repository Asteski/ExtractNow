<Window x:Class="ExtractNow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ExtractNow"
        Title="ExtractNow" Height="420" Width="720" WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver">
    <Window.InputBindings>
        <!-- Ctrl + ,  (comma) opens Settings -->
        <KeyBinding Key="OemComma" Modifiers="Control" Command="{x:Static local:MainWindow.SettingsCommand}"/>
        <!-- Ctrl + O opens extract dialog -->
        <KeyBinding Key="O" Modifiers="Control" Command="{x:Static local:MainWindow.ExtractCommand}"/>
        <!-- Ctrl + E opens extracted folder -->
        <KeyBinding Key="E" Modifiers="Control" Command="{x:Static local:MainWindow.OpenFolderCommand}"/>
        <!-- Ctrl + C cancels extraction -->
        <KeyBinding Key="C" Modifiers="Control" Command="{x:Static local:MainWindow.CancelCommand}"/>
        <!-- Ctrl + W exits app -->
        <KeyBinding Key="W" Modifiers="Control" Command="{x:Static local:MainWindow.ExitCommand}"/>
    </Window.InputBindings>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BrowseButton" Grid.Column="0" Content="Extract" Width="120" Click="BrowseButton_Click" Margin="0,0,8,0"/>
            <Button x:Name="SettingsButton" Grid.Column="1" Content="Settings" Width="100" Click="SettingsButton_Click" Margin="0,0,8,0"/>
            <TextBlock Grid.Column="2" Text="Drag &amp; drop an archive here, or launch via file association." VerticalAlignment="Center"/>
            <Button x:Name="AboutButton" Grid.Column="3" Width="28" Height="28" Margin="8,0,0,0" Click="AboutButton_Click" ToolTip="About">
                <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </Grid>

        <ProgressBar x:Name="Progress" Grid.Row="1" Height="18" Margin="0,12,0,12" IsIndeterminate="True" Minimum="0" Maximum="100"/>

        <!-- Drag-and-drop zone for archives -->
        <Border Grid.Row="2" Height="120" BorderBrush="#88000000" BorderThickness="1" CornerRadius="6" Background="#08000000"
                AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver" Margin="0,0,0,12">
            <Grid>
                <TextBlock x:Name="DropHintText" Text="Drop archive here" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <TextBox x:Name="LogBox" Grid.Row="3" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>

        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="StatusText" Grid.Column="0" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="OpenOutputButton" Content="Open extracted folder..." Width="170" Click="OpenOutputButton_Click" Margin="0,0,8,0" IsEnabled="False"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="100" Click="CancelButton_Click" Margin="0,0,8,0" IsEnabled="False"/>
                <Button x:Name="ExitButton" Content="Exit" Width="100" Click="ExitButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
